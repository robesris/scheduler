<h1>Listing characters</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Faction</th>
    <th>Race</th>
    <th>Class</th>
    <th>Level</th>
    <th>Gear score</th>
  </tr>

<% @characters.each do |character| %>
  <tr>
    <td><%=h character.name %></td>
    <td><%=h character.faction_id %></td>
    <td><%=h character.race_id %></td>
    <td><%=h character.class_id %></td>
    <td><%=h character.level %></td>
    <td><%=h character.gear_score %></td>
    <td><%= link_to 'Show', character %></td>
    <td><%= link_to 'Edit', edit_character_path(character) %></td>
    <td><%= link_to 'Destroy', character, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New character', new_character_path %>